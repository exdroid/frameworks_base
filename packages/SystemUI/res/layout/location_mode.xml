<com.android.systemui.qs.tiles.LocationDetailView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:orientation="vertical" >

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.QS.DataUsage" />

    <RadioGroup
        android:id="@+id/location_modes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/high_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_settings_location_mode_high_accuracy_title"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/high_accuracy_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.QS.DataUsage.Secondary"
            android:text="@string/quick_settings_location_mode_high_accuracy_description"
            android:clickable="true" />

        <RadioButton
            android:id="@+id/battery_saving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_settings_location_mode_battery_saving_title"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/battery_saving_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.QS.DataUsage.Secondary"
            android:text="@string/quick_settings_location_mode_battery_saving_description"
            android:clickable="true" />

        <RadioButton
            android:id="@+id/sensors_only"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/quick_settings_location_mode_sensors_only_title"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sensors_only_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.QS.DataUsage.Secondary"
            android:text="@string/quick_settings_location_mode_sensors_only_description"
            android:clickable="true" />
    </RadioGroup>
</com.android.systemui.qs.tiles.LocationDetailView>
